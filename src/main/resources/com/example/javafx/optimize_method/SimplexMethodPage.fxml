<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.example.javafx.optimize_method.controller.SimplexMethodPageController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0">
            <GridPane fx:id="simplexGridPane"/>
            <Label fx:id="messageLabel" text="Information will be displayed here"/>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="back" text="Back" onAction="#stepBack"/>
                <Button fx:id="forward" text="Forward" onAction="#stepForward"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
